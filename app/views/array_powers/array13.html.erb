            $('.graphDay6').hide();
            $('.graphDay7').hide();
            $('.graphDay8').hide();
            $('.graphDay9').hide();
        });

        $('#monthly').click(function(){
            $('.graphWeek').hide();
            $('.graphDay3').hide();
            $('.graphDay4').hide();
            $('.graphDay5').hide();
            $('.graphDay6').hide();
            $('.graphDay7').hide();
            $('.graphDay8').hide();
            $('.graphDay9').hide();
        });
    });
</script>