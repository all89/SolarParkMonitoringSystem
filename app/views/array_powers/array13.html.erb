<%= stylesheet_link_tag "application", :media => "all" %>
<%= javascript_include_tag "assets/javascripts/jquery-2.1.1.js", "assets/javascripts/highcharts.js", 'application', "chartkick", 'data-turbolinks-track' => true %>
<%= csrf_meta_tags %>
<br />
<br />
<div class="container">

  <p>
    Download:
    <%= link_to "CSV", arrays_path(format: "csv") %> |
    <%= link_to "Excel", arrays_path(format: "xls") %>
  </p>

  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-9">
      <button id="day3" class="btn btn-default">March 3</button>
      <button id="day4" class="btn btn-default">March 4</button>
      <button id="day5" class="btn btn-default">March 5</button>
      <button id="day6" class="btn btn-default">March 6</button>
      <button id="day7" class="btn btn-default">March 7</button>
      <button id="day8" class="btn btn-default">March 8</button>
      <button id="day9" class="btn btn-default">March 9</button>
      <button id="weekly" class="btn btn-default">Weekly</button>
      <button id="monthly" class="btn btn-default">Monthly</button>
    </div>
  </div><br />
  <div class="row buttonBorder"></div>
  <br/>
  <div class="row">
    <div class="col-lg-2 paramBorder"><br/><br />
      <ul id="parameters">
        <li><button id="power" class="btn btn-default">Power</button></li><br/>
        <li><button id="current" class="btn btn-default">Current</button></li><br/>
        <li><button id="voltage" class="btn btn-default">Voltage</button></li><br/>
      </ul>
    </div>
    <div class="col-lg-10">
      <div class="power">Array Power
        <div class="graphWeek"><%= line_chart @weekly_graph_power %></div>
        <div class="graphDay3"><%= line_chart @day3_graph_power %></div>
        <div class="graphDay4"><%= line_chart @day4_graph_power %></div>
        <div class="graphDay5"><%= line_chart @day5_graph_power %></div>
        <div class="graphDay6"><%= line_chart @day6_graph_power %></div>
        <div class="graphDay7"><%= line_chart @day7_graph_power %></div>
        <div class="graphDay8"><%= line_chart @day8_graph_power %></div>
        <div class="graphDay9"><%= line_chart @day9_graph_power %></div>
      </div>
      <div class="current">Array Current
        <div class="graphWeek"><%= line_chart @weekly_graph_current %></div>
        <div class="graphDay3"><%= line_chart @day3_graph_current %></div>
        <div class="graphDay4"><%= line_chart @day4_graph_current %></div>
        <div class="graphDay5"><%= line_chart @day5_graph_current %></div>
        <div class="graphDay6"><%= line_chart @day6_graph_current %></div>
        <div class="graphDay7"><%= line_chart @day7_graph_current %></div>
        <div class="graphDay8"><%= line_chart @day8_graph_current %></div>
        <div class="graphDay9"><%= line_chart @day9_graph_current %></div>
      </div>
      <div class="voltage">Array Voltage
        <div class="graphWeek"><%= line_chart @weekly_graph_voltage %></div>
        <div class="graphDay3"><%= line_chart @day3_graph_voltage %></div>
        <div class="graphDay4"><%= line_chart @day4_graph_voltage %></div>
        <div class="graphDay5"><%= line_chart @day5_graph_voltage %></div>
        <div class="graphDay6"><%= line_chart @day6_graph_voltage %></div>
        <div class="graphDay7"><%= line_chart @day7_graph_voltage %></div>
        <div class="graphDay8"><%= line_chart @day8_graph_voltage %></div>
        <div class="graphDay9"><%= line_chart @day9_graph_voltage %></div>
      </div>
    </div>
  </div>

</div>

<script>
    $('.voltage, .current, .graphDay3, .graphDay4, .graphDay5, .graphDay6, .graphDay7, .graphDay8, .graphDay9').addClass('hiddenCustom');
    $(document).ready(function(){
        $('#current').click(function(){
            $('.power').hide();
            $('.voltage').hide();
            $('.current').show();
        });

        $('#power').click(function(){
            $('.current').hide();
            $('.voltage').hide();
            $('.power').show();
        });

        $('#voltage').click(function(){
            $('.power').hide();
            $('.current').hide();
            $('.voltage').show();
        });

        $('#day9').click(function(){
            $('.graphDay9').show();
            $('.graphDay3').hide();
            $('.graphDay4').hide();
            $('.graphDay5').hide();
            $('.graphDay6').hide();
            $('.graphDay7').hide();
            $('.graphDay8').hide();
            $('.graphWeek').hide();
        });

        $('#day8').click(function(){
            $('.graphDay8').show();
